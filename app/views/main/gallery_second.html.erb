<!-- Page Content-->
<main class="page-content">
  <!-- RD Parallax-->
  <section class="rd-parallax">
    <div data-speed="0.2" data-type="media" data-url="images/breadcrumbs-01.jpg" class="rd-parallax-layer"></div>
    <div data-speed="0" data-type="html" class="rd-parallax-layer">
      <div class="breadcrumb-wrapper">
        <div class="shell context-dark section-40 section-lg-top-158">
          <h1>2016 Tournament Gallery</h1>
          <ol class="breadcrumb">
            <li><a href="./">Home</a></li>
            <li>2016 Tournament Gallery
            </li>
          </ol>
        </div>
      </div>
    </div>
  </section>
  <section class="section-80 section-md-110">
    <div class="shell shell-wide">
      <h2>2016 Tournament Gallery</h2>
      <hr class="divider divider-60 divider-primary offset-top-32">
      <div data-photo-swipe-gallery="gallery" class="offset-top-60 range">

        <% Dir.foreach(File.join(Dir.pwd, 'public', 'album2', 'images')) do |item| %>
          <% next if item == '.' or item == '..' or item == '.DS_Store' %>
          <div class="cell-lg-3 cell-md-4 cell-xs-6">
            <a data-photo-swipe-item="" data-size="588x560" href="/album2/images/<%= item %>" class="thumbnail-variant-1">
              <img src="/album2/images/<%= item %>" width="420" height="400" alt="" class="img-responsive center-block">
              <div class="caption">
                <div class="caption-inner"><span class="icon fa-search-plus"></span></div>
              </div>
            </a>
          </div>

        <% end %>
      </div>
    </div>
  </section>
</main>