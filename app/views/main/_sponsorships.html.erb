<div data-dots="true" data-items="1" data-sm-items="2" data-lg-items="3" data-margin="30" class="owl-carousel offset-top-60">
  <% count = 1 %>
  <% first_half = (@sponsorships.count / 2).round %>
  <% second_half = @sponsorships.count - first_half %>

  <% @sponsorships.limit(first_half).each do |product| %>

    <div>
      <div class="thumbnail-variant-2">
        <div class="caption-wrapper">
          <img src="images/experiense-0<%= (count).to_s %>.jpg" width="570" height="370" alt="" class="img-responsive center-block">
          <div class="caption">
            <% if signed_in? %>
              <a href="<%= add_product_to_user_cart_path(product.id, current_user.id) %>" class="btn btn-white btn-sm">Add
                To Cart</a>
            <% else %>
              <a href="<%= quick_purchase_path(product.id) %>"
                 class="btn btn-default btn-sm offset-top-18">
                Purchase
              </a>
            <% end %>
          </div>
        </div>
        <div class="caption-2">
          <div class="caption-2-inner">
            <span class="inset-right-5 text-middle icon icon-lg text-primary mdi mdi-trophy-variant"></span>
            <h6><a href="experience.html"><%= product.name %></a></h6>
            <hr class="divider divider-50 divider-gray-dark">
            <% if signed_in? %>
              <% if current_user.purchased?(product) %>
                <a href="#" class="btn btn-white btn-sm"><%= current_user.purchases.count.to_s %> Purchased</a>
              <% end %>
              <% if current_user.cart_contains?(product) %>
                <a href="#" class="btn btn-white btn-sm"><%= current_user.shopping_cart.count.to_s %> In Cart</a>
              <% end %>
            <% end %>
            <p><%= product.description %></p>
            <p class="text-dark offset-top-14">
                    <span class="text-middle">
                      <i class="fas fa-dollar-sign"></i>
                      <%= Money.new((product.price * 100.0), "USD").format(:no_cents_if_whole => true) %>
                    </span>
            </p>
            <% if signed_in? %>
              <a href="<%= add_product_to_user_cart_path(product.id, current_user.id) %>" class="btn btn-default btn-sm offset-top-18">Add To Cart</a>
            <% else %>
              <a href="<%= quick_purchase_path(product.id) %>" class="btn btn-default btn-sm offset-top-18">
                Purchase
              </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <% count = count + 1 %>
  <% end %>
</div>

<div class="swipe visible-xs visible-md text-center">
  <img src="<%= image_path 'swipe_icon.png' %>" class="swipe_icon"> Swipe
</div>

