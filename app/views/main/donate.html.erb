<main class="page-content">
  <!-- RD Parallax-->
  <section class="rd-parallax">
    <div data-speed="0.2" data-type="media" data-url="images/breadcrumbs-01.jpg" class="rd-parallax-layer"></div>
    <div data-speed="0" data-type="html" class="rd-parallax-layer">
      <div class="breadcrumb-wrapper">
        <div class="shell context-dark section-40 section-lg-top-158">
          <h1>Donate To The Foundation</h1>
          <ol class="breadcrumb">
            <li><a href="<%= root_path %>">Home</a></li>
            <li>Donate
            </li>
          </ol>
        </div>
      </div>
    </div>
  </section>

  <div class="section-80 section-md-110 bg-gray-light">
    <div class="shell">
      <h2>Donate</h2>
      <div class="range range-xs-center offset-md-top-42 offset-top-22 text-md-left">
        <div class="cell-md-6 cell-sm-8">
          <p>Make a donation of any amount, to the Athan Kaloidis Memorial Foundation. We use the proceeds of donations
            to support the Make-A-Wish Foundation.</p>
          <% form_for @donation,
                      url: add_donation_path,
                      method: 'post' do |f| %>

            <%= f.text_field :user_id %>

            <div class="form-group">
              <label for="subscribe-email" class="form-label">Enter your e-mail</label>
              <%= f.text_field :amount, class: "form-control" %>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">subscribe</button>
          <% end %>

        </div>
      </div>
    </div>
  </div>

</main>
