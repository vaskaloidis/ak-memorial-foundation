<section class="section-80 section-md-110 bg-gray-light">
  <div class="shell shell-wide">
    <h2>Our Gallery</h2>
    <hr class="divider divider-60 divider-primary offset-top-32">
    <!-- Owl Carousel-->
    <div data-photo-swipe-gallery="gallery" data-dots="true" data-items="1" data-sm-items="2" data-lg-items="3" data-margin="30" class="owl-carousel offset-top-60">

      <%
        used = Hash.new
        dir = Dir.foreach(ApplicationHelper.get_album(1))
        ah = ApplicationHelper
      %>

      <% 6.times do |count| %>

        <% acceptable = false %>

        <% while !acceptable %>
          <% item = dir.entries.fetch(Random.rand(1..(dir.count-1))) %>
          <% if item != '.' and item != '..' and item != '.DS_Store' and !used.has_value?(item) %>
            <% acceptable = true %>
            <% used.store(count, item) %>
          <% end %>
        <% end %>


        <div>
          <a data-photo-swipe-item="" data-size="684x504" href="<%= ah.get_image(1, item) %>" class="thumbnail-variant-1">
            <!-- img.width="570".height="420 -->
            <!--<img src="<%= ah.get_image(1, item) %>" width="auto" height="auto" alt="" class="img-responsive center-block">-->
            <div class="caption">
              <div class="caption-inner"><span class="icon fa-search-plus"></span></div>
            </div>
          </a>

          <% acceptable = false %>

          <% while !acceptable %>
            <% item = dir.entries.fetch(Random.rand(0..(dir.count-1))) %>
            <% if item != '.' and item != '..' and item != '.DS_Store' and !used.has_value?(item) %>
              <% acceptable = true %>
              <% used.store(count, item) %>
            <% end %>
          <% end %>


          <a data-photo-swipe-item="" data-size="684x504"
             style=" width:570px;
                    height: 420px;
                    background-image: url('<%= ah.get_image(1, item) %>');
                    background-repeat: no-repeat;
                    background-size: contain, cover;
                    background-position: center center;"
             href="<%= ah.get_image(1, item) %>"
             class="thumbnail-variant-1">
            <!-- img.width="570".height="420 -->
            <!--<img src="<%= ah.get_image(1, item) %>" width="auto" height="auto" alt="" class="img-responsive center-block">-->
            <div class="caption">
              <div class="caption-inner"><span class="icon fa-search-plus"></span></div>
            </div>
          </a>
        </div>


      <% end %>
      <div class="offset-top-32 offset-md-top-60">
        <a href="<%= '' %>" class="btn btn-primary-dr btn-sm">
          view all Gallery
        </a>
      </div>
    </div>
  </div>
</section>