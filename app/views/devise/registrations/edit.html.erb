<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>

  <%#= devise_error_messages! %>
  <%= render 'layouts/error_messages', object: resource %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="alert alert-danger">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="container section-bottom-60">
    <div class="row">
      <div class="col-xs-6 text-center unit-align-center">
        <%= f.label :email %><br/>
        <input id="email-textbox" disabled value="<%= current_user.email %>" type="text" name="user[email]" class="form-control form-control-gray">
      </div>
    </div>

    <div class="section-40 col-xs-12 col-md-12">
      <div class="row">
        <div class="col-xs-12 col-md-6">

          <h4>Basic Info</h4>

          <div class="form-group">
            <label for="contact-name" class="form-label form-label-outside">First Name</label>
            <%= f.text_field(:first_name, id: "firstname-textbox", class: "form-control form-control-gray") %>
          </div>

          <div class="form-group">
            <label for="contact-name" class="form-label form-label-outside">Last Name</label>
            <%= f.text_field(:last_name, id: "lastname-textbox", class: "form-control form-control-gray") %>
          </div>

          <div class="form-group">
            <label for="address" class="form-label form-label-outside">Address</label>
            <%= f.text_field(:address, id: "address-textbox", class: "form-control form-control-gray") %>
          </div>

          <div class="form-group">
            <label for="city-name" class="form-label form-label-outside">City</label>
            <%= f.text_field(:city, id: "city-textbox", class: "form-control form-control-gray") %>
          </div>

          <div class="form-group">
            <label for="State-name" class="form-label form-label-outside">State</label>
            <%= f.text_field(:state, id: "state-textbox", class: "form-control form-control-gray") %>
          </div>

          <div class="form-group">
            <label for="zip-name" class="form-label form-label-outside">Zipcode</label>
            <%= f.text_field(:zip, id: "zip-textbox", class: "form-control form-control-gray") %>
          </div>

        </div>

        <div class="col-xs-12 col-md-6">
          <h4>Company Info
            <small>(Optional)</small>
          </h4>

          <div class="form-group">
            <label for="contact-company" class="form-label form-label-outside">Company</label>
            <%= f.text_field(:company_name, class: "form-control form-control-gray") %>
          </div>

          <div class="form-group">
            <label for="website-company" class="form-label form-label-outside">Company Website</label>
            <%= f.text_field(:company_website, class: "form-control form-control-gray") %>
          </div>

          <div class="form-group">
            <label for="contact-company" class="form-label form-label-outside">Formal Company Name
              <small>(This will Display any on <%= link_to 'Purchased Sponsorship Banners', sponsorships_path %>)
              </small>
            </label>
            <%= f.text_field(:company_published_name, class: "form-control form-control-gray") %>
          </div>

          <div class="form-group">
            <label for="phone" class="form-label form-label-outside">Phone</label>
            <%= f.telephone_field(:phone, class: "form-control form-control-gray") %>
            <!--<input id="contact-phone" type="text" name="phone" data-constraints="@Required @Integer"-->
          </div>

          <div class="form-group">
            <label for="fax" class="form-label form-label-outside">Fax</label>
            <%= f.telephone_field(:fax, class: "form-control form-control-gray") %>
            <!--<input id="contact-phone" type="text" name="phone" data-constraints="@Required @Integer"-->
          </div>

        </div>

      </div>
    </div>

    <hr>

    <div class="row">
      <div class="col-xs-12 col-md-12">

        <h4>Tournament Group Partners<br>
          <small>(Optional. We'll notify you when they register)</small>
        </h4>


        <div class="row section-bottom-30">
          <div class="col-xs-12 col-md-6">
            <label for="contact-golfer1-email" disabled class="form-label form-label-outside">Golfer 1 Name</label>
            <input id="golfer-1-name" disabled value="<%= current_user.email %>" type="text" name="name" class="form-control form-control-gray">
          </div>
          <div class="col-xs-12 col-md-6">
            <label for="contact-golfer1-email" disabled class="form-label form-label-outside">Golfer 1 Name</label>
            <input id="golfer-1-email" disabled value="<%= current_user.first_name %> <%= current_user.last_name %>" type="text" name="name" class="form-control form-control-gray">
          </div>
        </div>

        <div class="row section-bottom-30 bg-gray-light">
          <div class="col-xs-12 col-md-6">
            <label for="contact-golfer2-name-label" class="form-label form-label-outside">Golfer 2 Name</label>
            <%= f.text_field(:golfer2_name, class: "form-control form-control-gray") %>
          </div>
          <div class="col-xs-12 col-md-6">
            <label for="contact-golfer2-email-label" class="form-label form-label-outside">Golfer 2 Email</label>
            <%= f.text_field(:golfer2_email, class: "form-control form-control-gray") %>
          </div>
        </div>

        <div class="row section-bottom-30">
          <div class="col-xs-12 col-md-6">
            <label for="contact-golfer3" class="form-label form-label-outside">Golfer 3 Name</label>
            <%= f.text_field(:golfer3_name, class: "form-control form-control-gray") %>
          </div>
          <div class="col-xs-12 col-md-6">
            <label for="contact-golfer3" class="form-label form-label-outside">Golfer 3 Email</label>
            <%= f.text_field(:golfer3_email, class: "form-control form-control-gray") %>
          </div>
        </div>

        <div class="row section-bottom-30 bg-gray-light">
          <div class="col-xs-12 col-md-6">
            <label for="contact-golfer4" class="form-label form-label-outside">Golfer 4 Name</label>
            <%= f.text_field(:golfer4_name, class: "form-control form-control-gray") %>
          </div>
          <div class="col-xs-12 col-md-6">
            <label for="contact-golfer4" class="form-label form-label-outside">Golfer 4 Email</label>
            <%= f.text_field(:golfer4_email, class: "form-control form-control-gray") %>
          </div>
        </div>
      </div>
    </div>

    <div class="row section-40">

      <div class="col-xs-12 col-md-6">
        <h4>Verify Current Password<br>
          <small class="text-muted">(Required)</small>
        </h4>
        <% if @current_password_error %>
          <div style="color: white" class="alert alert-danger">
            <small>Current password required to edit profile</small>
          </div>
        <% end %>
        <%#= f.password_field :current_password, lass: 'form-control corm-control-gray' %>

        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control corm-control-gray' %>
      </div>

      <div class="col-xs-12 col-md-6">
        <h4>Change Password<br>
          <small class="text-muted">(Not Required. Unless You Want To Change It.)</small>
        </h4>

        <label for="password" class="form-label form-label-outside">Password</label>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control corm-control-gray' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/>
        <label for="password-2" class="form-label form-label-outside">Repeat your password</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control corm-control-gray' %>

        <!--TODO: JS Pass verify -->
      </div>

      <div class="col-xs-12 col-md-6">
        <div class="form-group">
          <h4 class="section-bottom-30">Registration Message<br>
          </h4>
          <%= f.text_area(:note, class: "form-control form-control-gray") %>
          <!--<textarea id="contact-message" name="message" data-constraints="@Required" class="form-control form-control-gray"></textarea>-->
        </div>

      </div>

      <div class="row">
        <div class=" text-center text-md-left">
          <button type="submit" class="btn btn-primary btn-sm">Update Profile</button>
          <%= link_to "Cancel", :back, class: 'btn btn-info btn-sm' %>

        </div>
      </div>

    </div>
  </div>
<% end %>

<%#= button_to "Cancel my account", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete %>
