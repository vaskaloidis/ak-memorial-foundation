<main class="page-content">
  <section class="section-80 section-md-110">
    <h2>Tournament Registration</h2>
    <hr class="divider divider-primary divider-60 divider-offset">
    <h5>Player Golf Package: $150<br>
      Package: Green Fees, Golf Cart, Lunch, Beverages, Special Gift, Dinner
    </h5>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'rd-mailform text-left'}) do |f| %>

      <div class="container">

        <div style="display:none" id="form_validate_alert" class="alert alert-danger">
        </div>
        <%= render 'layouts/error_messages', object: resource %>

        <div class="section-40 col-xs-12 col-md-12">
          <div class="row">
            <div class="col-xs-12 col-md-6">

              <h4>Basic Info</h4>

              <div class="form-group">
                <label for="user_first_name" class="form-label form-label-outside">First Name
                  <small>(Required)</small>
                </label>
                <%= f.text_field(:first_name, class: "form-control form-control-gray") %>
              </div>

              <div class="form-group">
                <label for="user_last_name" class="form-label form-label-outside">Last Name
                  <small>(Required)</small>
                </label>
                <%= f.text_field(:last_name, class: "form-control form-control-gray") %>
              </div>

              <div class="form-group">
                <label for="user_email" class="form-label form-label-outside">E-Mail
                  <small>(Required)</small>
                </label>
                <% if params.has_key?(:invite_id) %>
                  <%= f.email_field :email, value: Invite.find(params[:invite_id].email), class: "form-control form-control-gray" %>
                <% else %>
                  <%= f.email_field :email, class: "form-control form-control-gray" %>
                <% end %>
              </div>

              <div class="form-group">
                <label for="user_phone" class="form-label form-label-outside">Phone
                  <small>(Required)</small>
                </label>
                <%= f.telephone_field(:phone, class: "form-control form-control-gray") %>
              </div>
            </div>

            <div class="col-xs-12 col-md-6">
              <h4>Company Info
                <small>(Optional)</small>
              </h4>

              <div class="form-group">
                <label for="user_company_name" class="form-label form-label-outside">Company</label>
                <%= f.text_field(:company_name, class: "form-control form-control-gray") %>
              </div>

              <div class="form-group">
                <label for="user_company_website" class="form-label form-label-outside">Company Website</label>
                <%= f.text_field(:company_website, class: "form-control form-control-gray") %>
              </div>

              <div class="form-group">
                <label for="user_company_published_name" class="form-label form-label-outside">Formal Company Name
                  <small>(This will Display on Banners)</small>
                </label>
                <%= f.text_field(:company_published_name, class: "form-control form-control-gray") %>
              </div>

              <div class="form-group">
                <label for="user_fax" class="form-label form-label-outside">Fax</label>
                <%= f.telephone_field(:fax, class: "form-control form-control-gray") %>
              </div>
            </div>

          </div>
        </div>

        <div class="row margin-bottom-20">
          <h4>Address
            <small>(Optional)</small>
          </h4>

          <div class="col-xs-12 col-md-6">
            <div class="form-group">
              <label for="address" class="form-label form-label-outside">Address</label>
              <%= f.text_field(:address, id: "address-textbox", class: "form-control form-control-gray") %>
            </div>

            <div class="form-group">
              <label for="city-name" class="form-label form-label-outside">City</label>
              <%= f.text_field(:city, id: "city-textbox", class: "form-control form-control-gray") %>
            </div>
          </div>

          <div class="col-xs-12 col-md-6">
            <div class="form-group">
              <label for="state-name" class="form-label form-label-outside">State</label>
              <%= f.text_field(:state, id: "state-textbox", class: "form-control form-control-gray") %>
            </div>

            <div class="form-group">
              <label for="zip-name" class="form-label form-label-outside">Zipcode</label>
              <%= f.text_field(:zip, id: "zip-textbox", class: "form-control form-control-gray") %>
            </div>
          </div>
        </div>

        <br>

        <div class="row">
          <div class="col-xs-12 col-md-12">

            <h4>Tournament Group Partners<br>
              <small>(Optional. We'll notify you when they register)</small>
            </h4>


            <div class="row section-bottom-30">
              <div class="col-xs-12 col-md-6">
                <label for="user_golfer1_name" disabled class="form-label form-label-outside">Golfer 1 Name</label>
                <input id="user_golfer1_name" disabled value="You" type="text" name="disable_golfer1_name" class="form-control form-control-gray">
              </div>
              <div class="col-xs-12 col-md-6">
                <label for="user_golfer1_email" disabled class="form-label form-label-outside">Golfer 1 Name</label>
                <input id="user_golfer1_email" disabled value="You" type="text" name="disable_golfer1_email" class="form-control form-control-gray">
              </div>
            </div>

            <div class="row section-bottom-30 bg-gray-light">
              <div class="col-xs-12 col-md-6">
                <label for="user_golfer2_name" class="form-label form-label-outside">Golfer 2 Name</label>
                <%= f.text_field(:golfer2_name, class: "form-control form-control-gray") %>
              </div>
              <div class="col-xs-12 col-md-6">
                <label for="user_golfer2_email" class="form-label form-label-outside">Golfer 2 Email</label>
                <%= f.text_field(:golfer2_email, class: "form-control form-control-gray") %>
              </div>
            </div>

            <div class="row section-bottom-30">
              <div class="col-xs-12 col-md-6">
                <label for="user_golfer3_name" class="form-label form-label-outside">Golfer 3 Name</label>
                <%= f.text_field(:golfer3_name, class: "form-control form-control-gray") %>
              </div>
              <div class="col-xs-12 col-md-6">
                <label for="user_golfer3_email" class="form-label form-label-outside">Golfer 3 Email</label>
                <%= f.text_field(:golfer3_email, class: "form-control form-control-gray") %>
              </div>
            </div>

            <div class="row section-bottom-30 bg-gray-light">
              <div class="col-xs-12 col-md-6">
                <label for="user_golfer4_name" class="form-label form-label-outside">Golfer 4 Name</label>
                <%= f.text_field(:golfer4_name, class: "form-control form-control-gray") %>
              </div>
              <div class="col-xs-12 col-md-6">
                <label for="user_golfer4_email" class="form-label form-label-outside">Golfer 4 Email</label>
                <%= f.text_field(:golfer4_email, class: "form-control form-control-gray") %>
              </div>
            </div>
          </div>
        </div>

        <div class="row section-40">
          <div class="col-xs-12 col-md-6">
            <h4>Create Site Login<br>
              <small class="text-muted">(Your Username Is Your Email)</small>
            </h4>

            <div class="form-group">
              <label for="password" class="form-label form-label-outside">Password
                <small>(6 Characters Minimum)</small>
              </label>
              <%= f.password_field :password, autocomplete: "off", class: 'form-control corm-control-gray' %>
            </div>

            <div class="form-group">
              <!--<input id="password" type="password" name="password" data-constraints="@Required" class="form-control form-control-gray">-->
              <label for="password-2" class="form-label form-label-outside">Repeat your password</label>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control corm-control-gray' %>
              <!--TODO: JS Pass verify
              <input id="password-2" type="password" name="password-2" data-constraints="@Required" class="form-control form-control-gray">-->
            </div>
          </div>

          <div class="col-xs-12 col-md-6">
            <h4 class="section-bottom-30">Registration Message</h4>
            <div class="form-group">
              <label for="user_note" class="form-label form-label-outside">Registration Note</label>
              <%= f.text_area(:note, class: "form-control form-control-gray") %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class=" text-center text-md-left">
            <%= flash[:recaptcha_error] %>
            <%= recaptcha_tags %><br>
            <%= f.submit 'Register', class: 'btn btn-primary btn-sm' %>
          </div>
        </div>

      </div>

    <% end %>

  </section>
</main>
