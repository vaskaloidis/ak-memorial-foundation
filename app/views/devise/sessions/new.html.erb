<!-- Page Content-->
<main class="page-content">
  <section class="section-80 section-md-110">
    <div class="shell">
      <h2>Sign In</h2>
      <hr class="divider divider-primary divider-60 divider-offset">
      <div class="range range-xs-center offset-top-32">
        <div class="cell-md-6 cell-lg-4 cell-sm-8">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <!--<form data-form-output="form-output-global" data-form-type="contact" method="post" action="bat/rd-mailform.php" class="rd-mailform text-left">-->

            <div class="form-group">
              <label for="login" class="form-label form-label-outside">Username or e-mail</label>
              <!--<input id="login" type="text" name="login" data-constraints="@Required" class="form-control form-control-gray">-->
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-gray" %>
            </div>

            <div class="form-group">
              <label for="password" class="form-label form-label-outside">Password</label>
              <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-gray"  %>
              <!--<input id="password" type="password" name="password" data-constraints="@Required" class="form-control form-control-gray">-->
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <button type="submit" class="btn btn-primary btn-block btn-sm offset-top-22">sign in</button>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </section>
</main>

